
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title id="PageTitle">更改密码</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Lib/m-Reset/m-Reset.css" rel="stylesheet" />
    <link href="~/Css/Base.css" rel="stylesheet" />
    <link href="~/Css/User/ChangePassword.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h2 id="HeaderTitle">更改密码</h2>
    </header>
    <div class="TopTools btn-group" role="group">
        <button class="btn btn-default btn-back glyphicon glyphicon-chevron-left"></button>
        <button id="BtnSave" class="btn btn-primary glyphicon glyphicon-floppy-disk"></button>
    </div>
    <main>
        <form id="InputForm" autocomplete="off">
            <div class="form-group">
                <label for="InputOldPassword">旧密码</label>
                <div class="input-group">
                    <input id="InputOldPassword" type="password" class="form-control" placeholder="请输入登录密码" autocomplete="off" required>
                    <span class="input-group-btn">
                        <button name="BtnShowPassword" type="button" class="btn btn-default glyphicon glyphicon-eye-open"></button>
                    </span>
                </div>
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="InputNewPassword">新密码</label>
                <div class="input-group">
                    <input id="InputNewPassword" type="password" class="form-control" placeholder="请输入登录密码" autocomplete="off" required>
                    <span class="input-group-btn">
                        <button name="BtnShowPassword" type="button" class="btn btn-default glyphicon glyphicon-eye-open"></button>
                    </span>
                </div>
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="InputNewPassword2">确认新密码</label>
                <div class="input-group">
                    <input id="InputNewPassword2" type="password" class="form-control" placeholder="请输入登录密码" autocomplete="off" required>
                    <span class="input-group-btn">
                        <button name="BtnShowPassword" type="button" class="btn btn-default glyphicon glyphicon-eye-open"></button>
                    </span>
                </div>
                <span class="help-block"></span>
            </div>
        </form>
    </main>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Lib/m-Tools/m-Tools.js"></script>
    <script src="~/Scripts/Base.js"></script>
    <script src="~/Scripts/User/ChangePassword.js"></script>
</body>
</html>